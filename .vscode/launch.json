  "version": "0.2.0",
  "compounds": [
    {
      "name": "Application",
      "configurations": ["Launch Server", "Launch Client"]
    }
  ],
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Launch Server",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "cwd": "${workspaceFolder}/server",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["start"]
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Launch Client",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "cwd": "${workspaceFolder}/client",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["start"]
    }
  ]
}